<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head') %> 
<body>
    
    <%- include('../partials/header') %> 

    <main class="main-general">
        <% productos.forEach(producto => { %>
         
        
        <div class="article-breadCrum">                    
            <a class="breadCrum" href="/">Home/<a class="breadCrum" href=""><%= producto.category %>/<a class="breadCrum" href=""><%= producto.name %> </a>                      
        </div>

        <section class="cont-det">
            
            <section class="cont-det-producto-top">            
            
                <!-- Contenedor de imagen del producto -->
                <section class="cont-img-prod">
                    
                    <div class="prod__img">
                        <img class="img__ppal" src="/img/products/<%= producto.image %>.png" alt="Imagen <%= producto.name %> ">
                    </div>
                    
                    <!-- Imagenes alternativas -->
                    <div class="prod__alt">
                        <div class="alt__img">
                            <img class="img__fotito" src="/img/products/<%= producto.image_2 %>.png" alt="Imagen alternativa 1">
                        </div>
                        <div class="alt__img">
                            <img class="img__fotito" src="/img/products/<%= producto.image_3 %>.png" alt="Imagen alternativa 2">
                        </div>
                            <div class="alt__img">
                            <img class="img__fotito" src="/img/products/<%= producto.image_4 %>.png" alt="Imagen alternativa 3">
                        </div>
                    </div>
                </section>
    
    
                <!-- contenedor de Descripcion del producto -->
                <section class="cont_des_prod">
                    <h1 class="titulo__prod"><%= producto.name %> </h1>
                    <hr class="titulo__divis"></hr>
                    
                    <div class="desc_prod">
                        
                            <!-- precio -->
                        <div class="precio_prod">

                         <p><%= producto.price %> </p>

                        </div>                         
                        
                        <!-- Boton compra -->
                        
                        <button type="button" class="comprar_prod"><a href="/carrito"></a>Comprar</button>                        
                        
                    </div>                   
                      
                    <!-- Barra icnonos -->
                    <div class="iconos_prod">
                        <div class="iconos_prod_opinions">
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="far fa-star"></i>
                            <i class="far fa-star"></i>

                            <div class="iconos_prod_opinions_text">
                                <p>(50 opiniones)</p>
                            </div>
                        </div>
                        
                        <div>
                            <button type="button" class="heart_b"><i class="far fa-heart"></i></button>  
                            <button type="button" class="share_b"><i class="fa fa-share-alt"></i></button>
                        </div>
                    </div>

                    <hr class="divisor_info_ventas"></hr>

                    <div class="info_venta_prod">
                        <i class='fas fa-wallet'></i>
                        <p class="info_venta_prod-text">12 cuotas sin interés de <%= producto.cuotas %>  </p>
                    </div>

                    <hr class="divisor_info_ventas"></hr>

                    <div class="info_venta_prod">
                        <i class='fas fa-store'></i>
                        <p class="info_venta_prod-text">Retiro gratis por sucursal</p>
                    </div>

                    <hr class="divisor_info_ventas"></hr>

                    <div class="info_venta_prod">
                        <i class='fas fa-truck'></i>
                        <p class="info_venta_prod-text">Envios a todo el pais</p>
                    </div>

                    <hr class="divisor_info_ventas"></hr>

                    <div class="info_venta_prod">
                        <i class='fas fa-user-shield'></i>
                        <p class="info_venta_prod-text">Garantia (1 año)</p>
                    </div>

                    <div class="agregar_carrito_btn_div">
                        <button type="button" class="agregar_carrito"><a href="/carrito"></a>Agregar al Carrito</button>
                    </div>
                                
                </section>         
                
            </section>

            <section class="cont-det-producto-bot">
                <!-- Botones de Descripcion de producto -->
                <div class="desc_prod_btns">
                    <button type="button" class="desc_prod-btn"><a href="/carrito"></a>Descripción</button>

                    <button type="button" class="desc_prod-btn"><a href="/carrito"></a>Especificaciones</button>
                </div>

                <hr class="titulo__divis"></hr>

                <!-- Descripcion producto -->
                <div class="desc_prod_tex">
                    <p class="desc_prod_tex_1"><%= producto.description %> </p>
                </div>
        
                <div class="desc_prod_tex">
                    <p class="desc_prod_tex_2">Caracteristicas tecnicas de <%= producto.name  %> </p>
                    <p class="desc_prod_tex_1"> <%= producto.caracteristics %> </p>
                    <!-- <ul>
                        <li>+ 12.000 CPI, 350 IPS.</li>
                        <li>Interruptores mecánicos de disparador dividido de 60 millones de clics.</li>
                        <li>Agarres laterales de silicona para mayor agarre y durabilidad.</li>
                        <li>Iluminación RGB de 8 zonas con notificaciones Discord.</li>
                        <li>Personalización total con SteelSeries.</li>
                        <li>Duración de la batería de más de 24 horas con carga rápida.</li>
                    </ul> -->
                </div>
            </section>
        </section>
        
        <% }) %>
        
       
        <!-- CARRUSEL DESTACADOS 2 -->
        <section class="main-home__cont-prod">

            <h2 class="cont-prod__categorias">Productos similares</h2>
        
                <nav class="cont-prod__articulos">
        
                    <%- include('../partials/carrusel') %> 
        
                </nav>
        
        </section>

    </main>

    <%- include('../partials/footer') %> 
            
</body>
</html>