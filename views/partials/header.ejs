                        <li><a href="/">OFERTAS</a></li>
                        <li><a href="/">NOSOTROS</a></li>
                        <li><a href="/">CONTACTO</a></li>
                        <li><a href="/products/admin">ADMIN</a></li>
                    </ul>
                </nav>
            </section>

                
            <!-- BARRA DE BÚSQUEDA -->
            <section class="elem__area-bar">
                <form action="/products/search" method="GET">
                    <input type="text" name="search" class="area-bar__search" placeholder="Buscar productos..." >
                    <button aria-label= "search" class="mag-glass" type="submit">
                            <i class="fas fa-search"></i>
                    </button>
                </form>
            </section>



        </section>
    </section>
        
        <!-- GUARDA DE COLORES -->
