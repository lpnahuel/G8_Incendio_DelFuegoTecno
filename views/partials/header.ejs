    <section class="contenedor-header">                   
            
        <!-- LOGO -->
        <a class="header__logo" href="/">
            <img class="logo__img" src="\img\dft-logo.webp" alt="Logo del fuego techno">
        </a>
           
            
        <!-- BOTONES PRINCIPALES -->
        <nav class="header__menu">    
            <ul class="menu__lista">
                <li class="lista__categorias"><a href="/products">PRODUCTOS ▼</a>
                    <ul class="lista__productos">
                        <li><a href="/products/category/notebooks">Notebooks</a></li>
                        <li><a href="/products/category/perifericos">Periféricos</a></li>
                        <li><a href="/products/category/almacenamiento">Almacenamiento</a></li>
                        <li><a href="/products/category/accesorios">Accesorios</a></li>
