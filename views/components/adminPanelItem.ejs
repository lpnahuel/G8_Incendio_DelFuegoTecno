<div class="adminProductCont">
    <div class="adminProductCont__img">
        <img src="/img/products/<%= product.thumb %>" alt="Imagen de <%= product.name %>">
    </div>
    <p class="adminProductCont__name"><%= product.name %></p>
    <hr class="name__div">
    <p class="adminProductCont__data">Precio: $<%= product.price.toLocaleString('es-ES') %></p>
    <p class="adminProductCont__data">Stock: <%= product.stock %></p>
    <p class="adminProductCont__data">Categoría: <%= product.categories.name %></p>
    <hr class="name__div">
    <div class="adminProductCont__btns">
        <form action="/products/admin/edit/<%= product.id %>?_method=DELETE" method="POST" onsubmit="return confirm('Estás a punto de eliminar el producto. ¿Querés continuar?')">
            <button aria-label="borrar" type="submit" class="delete__btn"><i class="fas fa-trash"></i> Eliminar</button>
        </form>
        <button type="submit" class="trashCan__btn"><a href="/products/admin/edit/<%= product.id %>"><i class="fa fa-edit"></i> Editar</a></button>
    </div>
</div>