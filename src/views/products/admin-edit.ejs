<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head', {title : 'DFT - Admin Edit'}) %> 
<body>

    <%- include('../partials/header') %> 

    <main class="main-general">

        <section class="cont-admin">

            <%- include('../components/adminBar') %> 


            <section class="admin-forms">
                <h2 class="form-title"><%= productRequested.name %> </h2>
                <hr class="forms__div">
                <article class="campos__column">

                    <div class="column__forms">
                        <form action="/products/admin/edit/<%= productRequested.id %>?_method=PUT" method="POST" enctype="multipart/form-data" class="forms__campos">
                            <label for="name">
                                <p class="lg__descrip">Nombre del producto*</p>                        
                                <input class="form__fields" type="text" id="name" name="name" value="<%= productRequested.name %>"  required>
                                <span class="feedback"></span>
                            </label>
                            <label for="category">
                                <p class="lg__descrip">Categoría*</p>                        
                            <select class="form__fields" id="category" name="category" required>
                                <% categories.forEach(category => { %> 
                                    <option value="<%= category.id %>" <%= productRequested.category_id === category.id ? 'selected' : ''%>><%= category.name %> </option>
                                <% }) %> 

                            </select>
                            <span class="feedback"></span>
                            </label>
                            <label for="price">
                                <p class="lg__descrip">Precio*</p>                        
                                <input class="form__fields" type="text" id="price" name="price" value="<%= productRequested.price %>"  required>
                                <span class="feedback"></span>
                            </label>
                            <label for="stock">
                                <p class="lg__descrip">Stock*</p>                        
                                <input class="form__fields" type="text" id="stock" name="stock" value="<%= productRequested.stock %>"  required>
                                <span class="feedback"></span>
                            </label>
                            <label for="image">
                                <p class="lg__descrip">Foto de producto*</p>
                                <input class="form__fields" type="file" name="image" id="image" accept=".jpg, .png, .webp" multiple>
                                <span class="feedback"></span>
                            </label>
                            <label for="thumb">
                                <p class="lg__descrip">Miniatura*</p>
                                <input class="form__fields" type="file" name="thumb" id="thumb" accept=".jpg, .png, .webp">
                                <span class="feedback"></span>
                            </label>
          
                    </div>
                    <div class="column__forms">

                            <label for="description">
                                <p class="lg__descrip">Descripción*</p>                        
                                <textarea class="form__fields" id="description" name="description" required><%= productRequested.description %></textarea>
                                <span class="feedback"></span>
                            </label>
                            <label for="specs">
                                <p class="lg__descrip">Especificaciones*</p>                        
                                <textarea class="form__fields" id="specs" name="specs"  required><%= productRequested.specs %></textarea>
                                <span class="feedback"></span>
                            </label>

                            <button class="main-btns" type="submit">Editar</button>
                        
                        </form>
                    </div>
                </article>
                
            </section>


        </section>


    </main>
    
    <%- include('../partials/footer') %> 
</body>
</html>